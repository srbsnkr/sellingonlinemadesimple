<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields>
		<field name="id" type="hidden" />

		<field name="name"
			type="text"
			size="55"
			label="COM_CSVI_REPLACEMENT_NAME_LABEL"
			description="COM_CSVI_REPLACEMENT_NAME_DESC"
			required="true"
			class="inputbox" />

		<field name="findtext"
			type="textarea"
			cols="5"
			rows="5"
			label="COM_CSVI_REPLACEMENT_FIND_LABEL"
			description="COM_CSVI_REPLACEMENT_FIND_DESC"
			required="true"
			class="inputbox"
			filter="raw" />

		<field name="replacetext"
			type="textarea"
			cols="5"
			rows="5"
			label="COM_CSVI_REPLACEMENT_REPLACE_LABEL"
			description="COM_CSVI_REPLACEMENT_REPLACE_DESC"
			required="false"
			class="inputbox" 
			filter="raw" />
			
		<field name="multivalue"
			type="list"
			label="COM_CSVI_REPLACEMENT_MULTIVALUE_LABEL"
			description="COM_CSVI_REPLACEMENT_MULTIVALUE_DESC"
			default="0"
			class="inputbox">
			<option value="0">COM_CSVI_NO</option>
			<option value="1">COM_CSVI_YES</option>
		</field>
		
		 <field name="method"
			type="list"
			size="1"
			label="COM_CSVI_REPLACEMENT_METHOD_LABEL"
			description="COM_CSVI_REPLACEMENT_METHOD_DESC"
			required="true"
			class="inputbox" 
			default="text">
			<option value="text">COM_CSVI_REPLACEMENT_REGULAR</option>
			<option value="regex">COM_CSVI_REPLACEMENT_REGEX</option>
		</field>
	</fields>
</form>